<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="@dimen/gridCard"

    android:layout_height="@dimen/gridCard">

    <ImageView
        android:id="@+id/songGridImage"
        android:layout_width="@dimen/imageDimensions"
        android:layout_height="@dimen/imageDimensions"/>

        <TextView
            android:id="@+id/songGridName"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/songGridArtist"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:src="@drawable/buy"/>

    </LinearLayout>